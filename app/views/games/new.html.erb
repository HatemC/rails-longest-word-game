
<div class="marge">
<h1>New game</h1>

<% @letters.each do |letter| %>
 <div class="letter"><%= letter %> </div>
<% end %>


<form action="score" method="post">
  <input type="text" name="word" id="form-style">
  <input type="hidden" name="grid" value= "<%= @letters %>">
  <input type="submit" value= "Play" id= "btn-style">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

</div>
